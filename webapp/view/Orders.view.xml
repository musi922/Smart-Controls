<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="lazyloading.controller.Orders"
>
    <Page id="ordersPage">
        <customHeader>
            <OverflowToolbar>
                <content>
                    <ToolbarSpacer />
                    <Title text="Orders Master Detail Page" />
                    <ToolbarSpacer />
                </content>
            </OverflowToolbar>
        </customHeader>
        <content>
        <SplitContainer initialMaster="master" initialDetail="orderDetail">
        <detailPages>
        <Page id="orderDetail" title="Order Details">
        <Table id="orderTable" items="{/Order_Details}" growing="true" growingScrollToLoad="true" growingThreshold="18">
        <columns>
        <Column >
        <Text text="Order ID"/>
        </Column>
        <Column >
        <Text text="Product ID"/>
        </Column>
        <Column >
        <Text text="Unit Price"/>
        </Column>
        <Column >
        <Text text="Quantity"/>
        </Column>
        <Column >
        <Text text="Discount"/>
        </Column>
        </columns>
        <items>
        <ColumnListItem >
        <cells>
        <Text text="{OrderID}"/>
        <Text text="{ProductID}"/>
        <Text text="{UnitPrice}"/>
        <Text text="{Quantity}"/>
        <Text text="{Discount}"/>
        </cells>
        </ColumnListItem>
        </items>
        </Table>
        
        </Page>
        </detailPages>
        <masterPages>
        <Page id="master" title="Orders Master">
        <List id="ordersList" items="{/Orders}" itemPress="onListPress">
        <items>
        <StandardListItem title="{OrderID}" type="Navigation"/>
        </items>
        </List>
        </Page>
        </masterPages>
        </SplitContainer>
        </content>
    </Page>
</mvc:View>
