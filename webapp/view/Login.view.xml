<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="lazyloading.controller.Login">
    <VBox class="sapUiLargeMargin sapUiContentPadding" width="80%">
        <Text text="Welcome back" class="sapUiLargeMarginTop sapUiLargeMarginBottom sapUiTitleStyle" />
        <VBox class="sapUiSmallMarginTop">
            <Label text="Email address" class="sapUiSmallMarginBottom" />
            <Input id="username" name="email" placeholder="Enter your email" class="username" />
            <Label text="Password" class="sapUiSmallMarginBottom" />
            <Input id="password" name="password" placeholder="Enter your password" class="password" />
        </VBox>
        <CheckBox text="Remember for 30 days" class="sapUiSmallMarginTop" />
        <Button text="Sign in" type="Emphasized" press="onLogin" class="sapUiSmallMarginTop" />
    </VBox>
</mvc:View>