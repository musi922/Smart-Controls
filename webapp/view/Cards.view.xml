<mvc:View xmlns:tnt="sap.tnt" xmlns:cards="sap.f.cards" xmlns:f="sap.f" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    controllerName="lazyloading.controller.Main">
   <HBox >
   <f:Card
	class="sapUiMediumMargin"
	width="300px">
	<f:header>
		<cards:Header
			title="Project Cloud Transformation"
			subtitle="Revenue per Product | EUR"/>
	</f:header>
	<f:content>
		<List
			showSeparators="All"
			items="{path: '/Products'}"
			growing="true" growingScrollToLoad="true" growingThreshold="5">
			<CustomListItem>
			<HBox
				 alignItems="Center"
				justifyContent="SpaceBetween">
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Title level="H3" text="{ProductName}" />
						<Text text="{ProductID}"/>
				</VBox>
				<tnt:InfoLabel
					class="sapUiTinyMargin"
					text="{UnitPrice}"
					colorScheme= "{statusSchema}"/>
			</HBox>
			</CustomListItem>
		</List>
	</f:content>
  </f:Card>
  <f:Card
	class="sapUiMediumMargin"
	width="300px">
	<f:header>
		<cards:Header
			title="Project Cloud Transformation"
			subtitle="Revenue per Product | EUR"/>
	</f:header>
	<f:content>
		<List
			showSeparators="All"
			items="{path: '/Categories'}"
			growing="true" growingScrollToLoad="true" growingThreshold="5" showUnread="true">
			<CustomListItem>
			<HBox
				 alignItems="Center"
				justifyContent="SpaceBetween">
				<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Title level="H3" text="{CategoryName}" />
						<Text text="{Description}"/>
				</VBox>
				<tnt:InfoLabel
					class="sapUiTinyMargin"
					text="{CategoryID}"
					colorScheme= "{statusSchema}"/>
			</HBox>
			</CustomListItem>
		</List>
	</f:content>
  </f:Card>

 <TimePicker displayFormat="short" value="{time>/currentTime}" /> 
 <f:GridContainer >
 <f:layout>
 <f:GridContainerSettings columns="4" columnSize="80px" gap="16px"/>
 </f:layout>
 <f:items>
 <Button text="item 1"/>
 <Button text="item 2"/>
 <Button text="item 3"/>
 <Button text="item 4"/>
 <Button text="item 5"/>
  </f:items>
 </f:GridContainer>  
 </HBox>

</mvc:View>